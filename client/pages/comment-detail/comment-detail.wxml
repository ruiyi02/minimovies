<view class="page"> 
  <view class="page__bd">  
      <navigator url="../movie-detail/movie-detail?id={{movie.id}}" class="weui-media-box weui-media-box_text">
        <image src="{{movie.image}}" mode="aspectFit" style="width: 680rpx" />
        <view>{{movie.title}}</view>                                         
      </navigator> 
      <view class="weui-panel">
          <view class="weui-panel__hd">
            <image src="{{comment.avatar}}" class="userinfo-avatar" style="width:50rpx; height: 50rpx;"></image>
          </view>
          <view class="weui-panel__bd">
              <view class="weui-media-box weui-media-box_text">
                  <view class="weui-media-box__desc">{{comment.content}}</view>
                    <view class="weui-media-box__info">
                       <view class="weui-media-box__info__meta">{{comment.fromNow}}</view>                                           </view>
              </view>
          </view>
      </view>             
      <view class="weui-panel__ft">
        <view wx:if="{{preview}}">
          <view class="weui-flex btn-bottom">
            <view class="weui-flex__item">
              <button class="weui-btn" type="primary" plain="true"  style='width:98%' bindtap='editComment'>编辑</button>
            </view>
            <view class="weui-flex__item">
                <button class="weui-btn" type="primary" plain="true"  style='width:98%' bindtap='publishComment'>发布</button> 
            </view>                 
          </view>   
        </view>             
        <view wx:else>
          <view class="weui-flex btn-bottom">
            <view class="weui-flex__item">
              <button wx:if="{{comment.is_favorite}}" class="weui-btn" type="primary" plain="true" style='width:98%' bindtap='loginAndDeleteFavorite'>删除收藏</button>
              <button wx:else class="weui-btn" type="primary" plain="true" style='width:98%' bindtap='loginAndAddFavorite'>加入收藏</button>
            </view>
              <view class="weui-flex__item">
                <button class="weui-btn" type="primary" plain="true" style='width:98%' bindtap='loginAndAddComment'>添加影评</button> 
              </view>                 
            </view>      
          </view> 
        </view>          
  </view>
</view>

