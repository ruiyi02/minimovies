<view class="page"> 
  <view class="page__bd">  
          <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">
                <image class="weui-article__img" src="{{movie.image}}" mode="aspectFit" style="width: 680rpx" />
            </view>
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__h1">{{movie.title}}</view>                    
                </view>  

                <view class="weui-panel">
                    <view class="weui-panel__hd">
                      <image src="{{comment.avatar}}" class="userinfo-avatar" style="width:50rpx; height: 50rpx;"></image>
                    </view>
                    <view class="weui-panel__bd">
                        <view class="weui-media-box weui-media-box_text">
                            <view class="weui-media-box__desc">{{comment.content}}</view>
                            <view class="weui-media-box__info">
                                <view class="weui-media-box__info__meta">{{comment.fromNow}}</view>                                </view>
                        </view>
                    </view>
                </view>             
            </view>
            <view class="weui-panel__ft">
              <view wx:if="{{preview}}">
                <view class="weui-flex">
                  <view class="weui-flex__item">
                      <button class="weui-btn" type="primary" plain="true" bindtap='navigateback'>编辑</button>
                  </view>
                  <view class="weui-flex__item">
                      <button class="weui-btn" type="primary" plain="true" bindtap='publishComment'>发布</button> 
                  </view>                 
                </view>   
              </view>             
              <view wx:else>
               <view class="weui-flex">
                <view class="weui-flex__item">
                    <button wx:if="{{comment.is_favorite}}" class="weui-btn" type="primary" plain="true" bindtap='addFavorite'>删除收藏</button>
                    <button wx:else class="weui-btn" type="primary" plain="true" bindtap='addFavorite'>加入收藏</button>
                </view>
                <view class="weui-flex__item">
                    <button class="weui-btn" type="primary" plain="true" bindtap='addComment'>添加影评</button> 
                </view>                 
               </view>      
              </view> 
            </view>   
        </view>       
    </view>
</view>

