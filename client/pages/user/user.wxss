.comment-card {
  align-items: center;
  font-size: 28rpx;
  padding: 30rpx 23rpx 0 0rpx; 
  color: rgba(29, 29, 38, 0.5);
}

.comment-content {
  -webkit-line-clamp:1;
}

.comment-avatar {
   margin-right: 10rpx
}

.record_box { 
  display: flex; 
  background: #fff; 
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.1); 
  border-radius: 80rpx; 
  margin-top: 20rpx;
  height: 90rpx; 
  padding:0 20rpx; 
  justify-content:center;
  align-items: center;  
}

.record_btn { 
  display: flex; 
  font-size:30rpx; 
  width: 100rpx;
  opacity: 0.8;
  justify-content:space-between;
  align-items: center;
  color:rgb(0, 183, 255);
}