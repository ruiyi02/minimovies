<view class="page"> 
  <view class="page__bd">    
      <view wx:if="{{movieList.length>0}}">          
        <navigator wx:for="{{movieList}}" wx:key="*this" url="../movie-detail/movie-detail?id={{item.id}}"  class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-cell__hd">                
              <image mode="aspectFill" src="{{item.image}}" class="movie-poster"></image>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
               <view class="weui-media-box__title">{{item.title}}</view>
               <view class="weui-media-box__desc">类型：{{item.category}}</view>
          </view>
        </navigator>  
      </view> 
      <view wx:selsif="errorMessage!=''">
          <view class="error-message">
              <text>{{errorMessage}}</text>           
          </view>                       
      </view>                            
   </view>
</view>