<view class="page"> 
  <view class="page__bd">  
      <navigator url="../movie-detail/movie-detail?id={{movie.id}}">
        <view  class="movie-image">
          <image src="{{movie.image}}" mode="aspectFit" style="width: 200rpx" />  
        </view>       
        <view class='movie-title'>{{movie.title}}</view>                           
      </navigator>      
      <button class="voice-btn" type="primary" plain="true" bindtouchstart="voiceStartRecord" bindtouchend="voiceEndRecord">按住说话
      </button>    
      <view class="btn-bottom">          
        <button class="weui-btn" type="primary" plain="true"  disabled="{{!voiceTempFilePath? true:false}}" style="width: 99%" bindtap='previewComment'>完成</button>              
      </view>
  </view>
</view>
