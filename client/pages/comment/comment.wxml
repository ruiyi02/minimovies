<view class="page"> 
  <view class="page__bd">  
          <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">
                <image class="weui-article__img" src="{{movie.image}}" mode="aspectFit" style="width: 680rpx" />
            </view>
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__h1">{{movie.title}}</view>                    </view>  
            
            <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">{{commentList.length}}条影评</view>
            <view class="weui-panel__bd">
                <view wx:for="{{commentList}}" wx:key="*this" class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__title weui-media-box__title_in-text"><image class="userinfo-avatar" src="{{item.avatar}}" background-size="cover"></image>{{item.username}}</view>
                    <view class="weui-media-box__desc">{{item.content}}</view>
                </view>             
            </view>         
        </view>
                          
            </view>           
          </view>
    </view>
</view>
