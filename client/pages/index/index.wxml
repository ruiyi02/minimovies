<view class="page"> 
  <view class="page__bd">  
    <navigator  url="../movie-detail/movie-detail?id={{comment.movie_id}}" >   
      <view class='movie-image'>
        <image src="{{comment.image}}" mode="aspectFill" style="width: 700rpx; height: 800rpx" />
      </view> 
      <view class="movie-title" >{{comment.title}}</view> 
    </navigator>  
    <navigator url="{{comment.url}}" class="comment-card">
          <image class='comment-avatar' src='{{comment.avatar}}'></image>
          <view class='comment-cnt'>
            <view class='comment-top'>
              <view class='comment-username'>{{comment.username}}</view>
              <view class="comment-time">{{comment.fromNow}}</view>
            </view>
            <view class='comment-content comment-content-short'>{{comment.content}}</view>    
          </view> 
    </navigator>             
  </view>
</view>

