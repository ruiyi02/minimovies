.comment-editor {
  margin: 29rpx 27rpx 0;
  padding-bottom: 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 10rpx;
}

.comment-input {
  width: 100%;
  height: 450rpx;
  padding: 29rpx 34rpx;  
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.comment-placeholder {
  color: rgba(29, 29, 38, 0.4);
}