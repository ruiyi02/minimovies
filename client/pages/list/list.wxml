<!--index.wxml-->
<view class="page"> 
  <view class="page__bd">    
      <view wx:if="{{movieList.length>0}}">  
       <navigator wx:for="{{movieList}}" wx:key="*this" url="../detail/detail?id={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">             
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-cell__bd weui-cell_primary">
                  <view>{{item.title}}</view>
              </view>
              <view class="weui-media-box__info">
                  <view class="weui-media-box__info__meta">类型：{{item.category}}</view>
              </view>              
          </view>    
          <view class="weui-cell__hd">                
              <image mode="aspectFill" src="{{item.image}}" class="movie-poster"></image>
          </view>
        </navigator>      
      </view> 
      <view wx:if="errorMessage!=''">
          <view class="error-message">
              <text>{{errorMessage}}</text>           
          </view>                       
      </view>                            
   </view>
</view>